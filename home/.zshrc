# ===================================================================
# * Environment variables
# ===================================================================

EDITOR="vim"

# ===================================================================
# * Sources
# ===================================================================

source "/usr/share/zsh-antidote/antidote.zsh"
antidote load

[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# ===================================================================
# * Configuration
# ===================================================================

bindkey -v
KEYTIMEOUT=1

# ===================================================================
# * Aliases
# ===================================================================

alias vim="nvim"
alias clear="clear && neofetch"
alias cd..="cd .."

# ===================================================================
# * Commands
# ===================================================================

neofetch
